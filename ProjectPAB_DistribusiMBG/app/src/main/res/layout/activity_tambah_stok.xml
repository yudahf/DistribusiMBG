<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/customToolbar"
        layout="@layout/navbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etNamaBarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_backgroundbiru"
            android:padding="10dp"
            android:textColor="@color/black"
            android:enabled="false"
            android:text="Makanan Bergizi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah Stok"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etJumlahStok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_backgroundbiru"
            android:padding="10dp"
            android:hint="Masukkan Jumlah Stok"
            android:textColor="@color/black"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Input"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etTanggalInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_backgroundbiru"
            android:padding="10dp"
            android:hint="Pilih Tanggal"
            android:textColor="@color/black"
            android:focusable="false"
            android:clickable="true" />

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:textColor="@android:color/white"
            android:backgroundTint="#00FF00"
            android:layout_marginTop="32dp" />

        <Button
            android:id="@+id/btnBatal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batal"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF0000"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</LinearLayout>
