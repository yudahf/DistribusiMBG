<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/customToolbar"
        layout="@layout/navbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Sekolah"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etNamaSekolah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_backgroundbiru"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:hint="Masukkan Nama Sekolah!"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat Sekolah"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_backgroundbiru"
            android:padding="10dp"
            android:hint="Masukkan Alamat Sekolah"
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="5"
            android:gravity="top|start" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Operator Sekolah"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:id="@+id/etNamaOperator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_backgroundbiru"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:hint="Masukkan Nama Operator Sekolah!"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Telepon Operator"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etNoHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_backgroundbiru"
            android:padding="10dp"
            android:hint="Masukkan Nomor Handphone"
            android:textColor="@color/black"
            android:inputType="phone" />

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:textColor="@android:color/white"
            android:backgroundTint="#00FF00"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnBatal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batal"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF0000"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</LinearLayout>
